{
    "name": "open-lecture/open-lecture",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "ext-pdo_sqlite": "*",
        "erusev/parsedown": "^1.6",
        "doctrine/doctrine-bundle": "^1.9",
        "doctrine/orm": "^2.7",
        "ezyang/htmlpurifier": "^4.9",
        "sensio/framework-extra-bundle": "^5.0",
        "symfony/asset": "^4.2",
        "symfony/expression-language": "^4.2",
        "symfony/dependency-injection": "^4.2",
        "symfony/flex": "^1.0",
        "symfony/form": "^4.2",
        "symfony/framework-bundle": "^4.2",
        "symfony/security-bundle": "^4.2",
        "symfony/swiftmailer-bundle": "^3.1",
        "symfony/twig-bundle": "^4.2",
        "symfony/yaml": "^4.2",
        "twig/extensions": "^1.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.10.1",
        "slam/php-cs-fixer-extensions": "^1.16",
        "symfony/browser-kit": "^4.2",
        "symfony/css-selector": "^4.2",
        "symfony/debug-bundle": "^4.2",
        "symfony/dotenv": "^4.2",
        "symfony/stopwatch": "^4.2",
        "symfony/web-profiler-bundle": "^4.2",
        "symfony/web-server-bundle": "^4.2",
        "symplify/easy-coding-standard": "^4.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "OpenLecture\\Provision\\": "packages/Provision/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "check-cs": "vendor/bin/ecs check src packages",
        "fix-cs": "vendor/bin/ecs check src packages --fix",
        "phpstan": "vendor/bin/phpstan analyse src packages --level max"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
